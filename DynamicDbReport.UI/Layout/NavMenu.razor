<div class="navmenu">
    <input type="checkbox" title="Menu expand/collapse toggle" id="navmenu-toggle" class="navmenu-icon" />
    <label for="navmenu-toggle" class="navmenu-icon"><FluentIcon Value="@(new Icons.Regular.Size20.Navigation())" Color="Color.Fill" /></label>
    <nav class="sitenav" aria-labelledby="main-menu">
        <FluentNavMenu Id="main-menu" Width="250" Collapsible="true" Title="Navigation menu" @bind-Expanded="expanded" CustomToggle="true">
             <FluentNavLink Href="/" Match="NavLinkMatch.All" Icon="@(new Icons.Regular.Size20.Home())" IconColor="Color.Accent">Home</FluentNavLink>
             <FluentNavLink Href="importData" Icon="@(new Icons.Regular.Size20.ArrowImport())" IconColor="Color.Accent">Import</FluentNavLink>
             <FluentNavLink Href="exportData" Icon="@(new Icons.Regular.Size20.ArrowExport())" IconColor="Color.Accent">Export</FluentNavLink>
            <FluentNavLink Href="convertDbData" Icon="@(new Icons.Regular.Size20.Database())" IconColor="Color.Accent">Convert DB Entities</FluentNavLink>
            <FluentNavLink Href="convertDbEntities" Icon="@(new Icons.Regular.Size20.ConvertRange())" IconColor="Color.Accent">Convert DB Data</FluentNavLink>
            <FluentNavLink Href="reportGenerator" Icon="@(new Icons.Regular.Size20.DataArea())" IconColor="Color.Accent">Report generator</FluentNavLink>
        </FluentNavMenu>
    </nav>
</div>

@code {
    private bool expanded = true;
}
